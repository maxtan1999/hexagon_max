<!--
 | Logback configuration for tests
 !-->
<configuration>
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <Pattern>%d{HH:mm:ss.SSS} %highlight(%-5p) %magenta([%-15.15t]) %-30c{30} | %m%n</Pattern>
    </encoder>
  </appender>

  <root level="off">
    <appender-ref ref="console" />
  </root>

  <logger name="java.lang.System" level="info"/>
  <logger name="com.hexagonkt" level="info" />
  <logger name="org.example" level="trace" />
</configuration>
